<Page x:Class="MITRA.Plan.PlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MITRA.Plan"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlanPage">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="50"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="kostyl" Grid.Column="0" ShowGridLines="True">
            <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
        </Grid>
        <ScrollViewer Grid.Row="0" Grid.Column="1" HorizontalScrollBarVisibility="Visible">
            <Grid x:Name="timeLine" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" MouseDown="timeLine_MouseDown">
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
